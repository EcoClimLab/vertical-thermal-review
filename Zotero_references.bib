@article{quevedo-rojasLeafAcclimationStrategies2018,
  title = {Leaf Acclimation Strategies to Contrasting Light Conditions in Saplings of Different Shade Tolerance in a Tropical Cloud Forest},
  author = {Quevedo-Rojas, Ana and García-Núñez, Carlos and Jerez-Rico, Mauricio and Jaimez, Ramón and Schwarzkopf, Teresa},
