@article{naiduPhysiologicalMorphologicalAcclimation1998,
  title = {Physiological and {{Morphological Acclimation}} of {{Shade}}-{{Grown Tree Seedlings}} to {{Late}}-{{Season Canopy Gap Formation}}},
