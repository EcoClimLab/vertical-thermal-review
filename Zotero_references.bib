@article{azumaHeightrelatedVariationsLeaf2019,
  title = {Height-Related Variations of Leaf Traits Reflect Strategies for Maintaining Photosynthetic and Hydraulic Homeostasis in Mature and Old {{Pinus}} Densiflora Trees},
  author = {Azuma, Wakana and Ishii, H. Roaki and Masaki, Takashi},
  date = {2019-02-01},
