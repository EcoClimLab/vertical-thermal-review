@article{nievola_rapid_2017,
  title = {Rapid Responses of Plants to Temperature Changes},
  author = {Nievola, Catarina C. and Carvalho, Camila P. and Carvalho, Victória and Rodrigues, Edson},
  date = {2017-11},
  journaltitle = {Temperature: Multidisciplinary Biomedical Journal},
