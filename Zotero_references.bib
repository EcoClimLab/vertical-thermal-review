	keywords = {light availability, chlorophyll, dry mass per unit area, nitrogen partitioning, optimality, photosynthetic capacity},
	pages = {293--313},
	file = {Snapshot:files/1059/j.1365-3040.2003.01143.html:text/html;Full Text PDF:files/1060/Niinemets et al. - 2004 - Within-canopy variation in the rate of development.pdf:application/pdf}
}

@article{niinemetsAcclimationHighIrradiance1998,
	title = {Acclimation to high irradiance in temperate deciduous trees in the field: changes in xanthophyll cycle pool size and in photosynthetic capacity along a canopy light gradient},
