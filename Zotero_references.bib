	year = {2013},
	keywords = {Beech, Carotenoids, Monoterpenoids, Photosynthesis, Sun and shade leaves, Vertical canopy gradient, Volatiles},
	pages = {85--95},
	file = {ScienceDirect Snapshot:files/1086/S1352231013005785.html:text/html}
}

@article{simpragaLanguagePlantsWhere2016,
	title = {Language of plants: {Where} is the word?},
	volume = {58},
