	keywords = {shade tolerance, drought tolerance, functional plant type, intercontinental comparisons, phylogeny, trade-offs, waterlogging tolerance},
	pages = {521--547},
	file = {Snapshot:files/114/0012-9615(2006)076[0521TTSDAW]2.0.html:text/html;Full Text PDF:files/115/Niinemets and Valladares - 2006 - Tolerance to Shade, Drought, and Waterlogging of T.pdf:application/pdf}
