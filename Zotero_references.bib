	journal = {Plant, Cell \& Environment},
	author = {Sharkey, Thomas D. and Monson, Russell K.},
	year = {2014},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/pce.12289},
	keywords = {global change, methyl erythritol pathway, modelling},
	pages = {1727--1740},
	file = {Snapshot:files/1091/pce.html:text/html}
}

