	keywords = {shade tolerance, acclimation to growth irradiance, cytochrome f, leaf morphology, light use efficiency, nitrogen content, nitrogen partitioning model, nitrogen use efficiency, Rubisco},
	pages = {845--866},
	file = {Snapshot:files/119/j.1365-3040.1997.d01-133.html:text/html;Full Text PDF:files/120/Niinemets and Tenhunen - 1997 - A model separating leaf structural and physiologic.pdf:application/pdf}
}

@article{niinemetsResponsesForestTrees2010a,
