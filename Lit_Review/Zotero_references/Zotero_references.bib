@article{rey-sanchezSpatialSeasonalVariation2016,
  title = {Spatial and Seasonal Variation in Leaf Temperature within the Canopy of a Tropical Forest},
  author = {Rey-Sánchez, Ac and Slot, M and Posada, Jm and Kitajima, K},
  date = {2016-11-30},
  journaltitle = {Clim. Res.},
  volume = {71},
