@article{lewisVerticalGradientsPhotosynthetic2000,
  title = {Vertical Gradients in Photosynthetic Light Response within an Old-Growth {{Douglas}}-Fir and Western Hemlock Canopy},
  author = {Lewis, J. D. and McKane, R. B. and Tingey, D. T. and Beedlow, P. A.},
